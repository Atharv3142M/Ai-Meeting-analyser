{
  "name": "POAi Recorder",
  "description": "Records screen and mic for POAi analysis",
  "version": "2.0.0",
  "manifest_version": 3,
  "minimum_chrome_version": "116",
  "action": {
    "default_icon": {
      "16": "icons/not-recording.png",
      "32": "icons/not-recording.png"
    },
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "http://127.0.0.1:5000/*", 
    "http://localhost:5000/*",
    "https://*/*", 
    "http://*/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "permissions": [
    "tabCapture",
    "offscreen",
    "scripting",
    "storage",
    "desktopCapture",
    "tabs",
    "notifications"
  ],
  "web_accessible_resources": [
    {
      "resources": ["camera.html", "camera.js", "video.html", "video.js", "dashboard.html"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ]
}