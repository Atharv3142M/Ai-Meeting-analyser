{
  "manifest_version": 3,
  "name": "POAi v2.0 - Productivity Optimization Assistant AI",
  "version": "2.0.0",
  "description": "Record meetings with AI-powered analysis. 100% local and private.",
  "permissions": [
    "tabCapture",
    "offscreen",
    "notifications",
    "tabs",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "http://127.0.0.1:5000/*",
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "POAi v2.0 - Record Meeting"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["offscreen.html"],
      "matches": ["<all_urls>"]
    }
  ]
}